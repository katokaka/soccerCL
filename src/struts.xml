<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<package name="com.internousdev.soccerCL.action" extends="struts-default">

		<!-- 店舗情報を取得して店舗一覧画面に遷移するアクション -->
		<action name="GoStoreListAction" class="com.internousdev.soccerCL.action.GoStoreListAction"
		method="execute">
		<result name="success">StoreList.jsp</result>
		</action>

		<!-- 管理者としてログインして注文情報確認画面へと遷移するアクション　-->
		<action name="LoginAdminAction" class="com.internousdev.soccerCL.action.LoginAdminAction"
		method="execute">
		<interceptor-ref name="token" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >Admin.jsp</result>
		<result name="success">/WEB-INF/hidden-jsp/Task.jsp</result>
		<result name="error">Admin.jsp</result>
		</action>

		<!-- 受け渡しが済んだ時点reservationテーブル(注文)の情報をhistory(購入履歴)へと登録するためのアクション -->
		<action name="DeliveryAcceptAction" class="com.internousdev.soccerCL.action.DeliveryAcceptAction"
		method="execute">
		<interceptor-ref name="token" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >/WEB-INF/hidden-jsp/Task.jsp</result>
		<result name="success">/WEB-INF/hidden-jsp/Task.jsp</result>
		</action>

		<!-- プレミアムユーザーをDBに登録する為のアクション -->
		<action name="InsertUserInfoAction" class="com.internousdev.soccerCL.action.InsertUserInfoAction"
		method="execute">
		<interceptor-ref name="token" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >Admin.jsp</result>
		<result name="success">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		<result name="error">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		</action>

		<!-- 登録されたプレミアムユーザー情報を変更するアクション -->
		<action name="EditUserInfoAction" class="com.internousdev.soccerCL.action.EditUserInfoAction"
		method="execute">
		<interceptor-ref name="token" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >Admin.jsp</result>
		<result name="success">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		<result name="error">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		</action>

		<!-- 登録されたプレミアムユーザー情報を照会するアクション -->
		<action name="ShowUserInfoAction" class="com.internousdev.soccerCL.action.ShowUserInfoAction"
		method="execute">
		<interceptor-ref name="token" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >Admin.jsp</result>
		<result name="success">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		<result name="error">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		</action>

		<!-- 管理者ログイン画面へと遷移するためのアクション -->
		<action name="LogoutAdminAction" class="com.internousdev.soccerCL.action.LogoutAdminAction"
		method="execute">
		<result name="success">Admin.jsp</result>
		</action>

		<!-- 店舗一覧画面へと遷移するためのアクション -->
		<action name="BackStoreListAction" class="com.internousdev.soccerCL.action.BackStoreListAction"
		method="execute">
		<result name="success">Index.jsp</result>
		</action>

		<!-- 商品一覧画面へと遷移するためのアクション -->
		<action name="EnterStoreAction" class="com.internousdev.soccerCL.action.EnterStoreAction"
		method="execute">
		<result name="success">/Goods.jsp</result>
		<result name="error">/Index.jsp</result>
		</action>

		<!-- 確認画面へと遷移するためのアクション -->
		<action name="PushCartAction" class="com.internousdev.soccerCL.action.PushCartAction"
		method="execute">
		<result name="success">OrderForm.jsp</result>
		<result name="error">Goods.jsp</result>
		</action>

		<!-- 確認画面から商品一覧画面に戻るためのアクション -->
		<action name="BackGoodsAction" class="com.internousdev.soccerCL.action.GoBackAction"
		method="execute">
		<result name="success">Goods.jsp</result>
		</action>

		 <!-- ログイン画面へ遷移するためのアクション -->
		<action name="GoLoginAction" class="com.internousdev.soccerCL.action.GoBackAction"
		method="execute">
		<result name="success">/Login.jsp</result>
		</action>

		 <!-- ログイン画面へ遷移するためのアクション -->
		<action name="LoginPremiumAction" class="com.internousdev.soccerCL.action.LoginPremiumAction"
		method="execute">
		<interceptor-ref name="tokenSession" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >Goods.jsp</result>
		<result name="success">/Goods.jsp</result>
		<result name="error">/Login.jsp</result>
		</action>

		<!-- 完了画面へ遷移するためのアクション -->
		<action name="EditCompleteAction" class="com.internousdev.soccerCL.action.EditCompleteAction"
		method="execute">
		<interceptor-ref name="tokenSession" />
		<interceptor-ref name="defaultStack" />
		<result name="invalid.token" >OrderForm.jsp</result>
		<result name="success">/End.jsp</result>
		<result name="error">/Goods.jsp</result>
		</action>

		<!-- 確認画面で選択した商品を全削除するためのアクション -->
		<action name="DeleteCartAction" class="com.internousdev.soccerCL.action.DeleteCartAction"
		method="execute">
		<result name="success">OrderForm.jsp</result>
		</action>

		<!-- 確認画面で選択した商品を選択削除するためのアクション -->
		<action name="SelectDeleteCartAction" class="com.internousdev.soccerCL.action.SelectDeleteCartAction"
		method="execute">
		<result name="success" type="chain">PushCartAction</result>
		</action>

		<!-- 商品一覧画面で商品を選択するためのアクション -->
		<action name="PurchaseSelectAction" class="com.internousdev.soccerCL.action.PurchaseSelectAction"
		method="execute">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="token">
				<param name="excludeMethods"></param>
			</interceptor-ref>
			<result name="invalid.token">Goods.jsp</result>
		<result name="success">/Goods.jsp</result>
		</action>

		<!-- TwitterOAuth認証へと遷移するためのアクション -->
		<action name="GoTwitterAction" class="com.internousdev.soccerCL.twitter.GoTwitterAction"
		method="execute">
		<result name="success">Goods.jsp</result>
		</action>

		<!-- TwitterOAuth認証後商品一覧へと遷移するためのアクション -->
		<action name="LoginTwitterAction" class="com.internousdev.soccerCL.twitter.LoginTwitterAction"
		method="execute">
		<result name="success">/Goods.jsp</result>
		<result name="error">/Index.jsp</result>
		</action>

		<!-- 会員情報画面へと遷移するためのアクション -->
		<action name="GoUserInfoAction" class="com.internousdev.soccerCL.action.GoUserInfoAction"
		method="execute">
		<result name="success">/WEB-INF/hidden-jsp/UserInfo.jsp</result>
		<result name="error">Admin.jsp</result>
		</action>

		<!-- 商品一覧画面の更新ボタンのためのアクション -->
		<action name="GoBackAction" class="com.internousdev.soccerCL.action.GoBackAction"
		method="execute">
		<result name="success">Goods.jsp</result>
		</action>

		<!--統計画面へと遷移するためのアクション -->
		<action name="GoStatistics" class="com.internousdev.soccerCL.action.StatisticsAction"
		method="execute">
		<result name="success">/WEB-INF/hidden-jsp/Statistics.jsp</result>
		</action>

		<!--受渡し確認画面に遷移するアクション -->
		<action name="GoTaskAction" class="com.internousdev.soccerCL.action.GoBackAction"
		method="execute">
		<result name="success">/WEB-INF/hidden-jsp/Task.jsp</result>
		</action>
	</package>
</struts>


		
		<!-- 加藤記載 -->
		<!-- 商品詳細画面へと遷移するためのアクション -->
		<action name="GoMatchDetailAction" class="com.internousdev.soccerCL.action.GoMatchDetailAction"
		method="execute">
		<result name="success">match_detail.jsp</result>
		<result name="error">/Index.jsp</result>
		</action>
		
		
	</package>
</struts>

